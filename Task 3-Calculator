<script>
  const display = document.getElementById('display');

  function appendValue(val) {
    display.value += val;
  }

  function appendOperator(op) {
    display.value += op;
  }

  function clearDisplay() {
    display.value = '';
  }

  function deleteLast() {
    display.value = display.value.slice(0, -1);
  }

  function calculate() {
    try {
      display.value = eval(display.value);
    } catch (e) {
      display.value = 'Error';
    }
  }
</script>

